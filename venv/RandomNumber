import random
number = random.randint(2,20)

guess = int(input("Enter a guess number"))

while 2<= guess <=20:
    if number > guess:
        print("u are getting there dont give up")
    elif guess > number:
        print("guess is high u are really good at it just one more ")
    else:
        print("congratulation well done")
        break
    guess = int(input("Enter a guess number"))
else:
    print("you quit too early: ", number)